{
	"name": "klontong",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"test": "jest --watchAll=false",
		"test:coverage": "yarn test --coverage",
		"test:ci": "yarn test --ci",
		"watch:test": "jest --watch",
		"check:lint": "eslint . --quiet --ignore-path .gitignore",
		"check:prettier": "prettier --config .prettierrc ./src/ --check",
		"check:ts": "tsc",
		"check:dead-ts": "ts-prune --error",
		"checker": "yarn check:lint && yarn check:prettier && yarn check:dead-ts && yarn check:ts && yarn test",
		"format:lint": "eslint . --fix --quiet --ignore-path .gitignore",
		"format:prettier": "prettier --config .prettierrc . --ignore-path .gitignore --write --loglevel silent",
		"formatter": "yarn format:lint; yarn format:prettier",
		"prepare": "husky install"
	},
	"dependencies": {
		"@types/node": "18.11.9",
		"@types/react": "18.0.25",
		"@types/react-dom": "18.0.9",
		"eslint": "8.28.0",
		"eslint-config-next": "13.0.5",
		"next": "13.0.5",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"typescript": "4.9.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.2.0",
		"@commitlint/config-conventional": "^17.2.0",
		"@testing-library/jest-dom": "^5.16.5",
		"@types/jest": "^29.2.3",
		"eslint-plugin-jest": "^27.1.6",
		"husky": "^8.0.0",
		"jest": "^29.3.1",
		"jest-environment-jsdom": "^29.3.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"ts-jest": "^29.0.3",
		"ts-prune": "^0.10.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,svg}": [
			"yarn formatter"
		]
	}
}
